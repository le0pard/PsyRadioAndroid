<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/activity_margin_half"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tl_hours_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/timer_value_size"/>

            <TextView
                android:id="@+id/tl_hours_mark_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="7dp"
                android:text="@string/hours_mark"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/timer_mark_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_margin_half"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tl_minuts_tenth_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/timer_value_size"/>

            <TextView
                android:id="@+id/tl_minuts_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/timer_value_size"/>

            <TextView
                android:id="@+id/tl_minuts_mark_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="7dp"
                android:text="@string/minuts_mark"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/timer_mark_size"/>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/tl_clear_image_button"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/oval_keyboard_blue"
        android:src="@drawable/ic_backspace"/>


</FrameLayout>